				let re1 = new RegExp("<[^<>]+>","g");
				let msg = html.replace(re1,'');
				msg = msg.replace(new RegExp(/&nbsp;/g),' ').replace(/[\r\n]/g,"").replace(/\ +/g,"")
				return msg;
