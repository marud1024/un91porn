			getVideoUrl(html){
				
				let source_str = this.getVideoUrl2(html);
				console.log(source_str);
				// let isValid = this.isValidUrl(source_str)
				// console.log(isValid);
				if (source_str != '') {
					this.setVideoUrl(source_str)
					return source_str;
				}
				
				try{
					//页面解密获取地址
					let index = html.indexOf("document.write(strencode");
					let str = html.substring(index, index + 600);
					let split = str.split('"');
					let param1 = split[1];
					let param2 = split[3];
					let param3 = split[5];
					// console.log(param1);
					// console.log(param2);
					// console.log(param3);
					param1 = atob(param1)
					param1 = new String(param1);
					for (let i = 0, k = 0; i < param1.length; i++) {
						k = i % param2.length;
						source_str += "" + String.fromCharCode(param1.codePointAt(i) ^ param2.codePointAt(k));
					}
					source_str = atob(source_str)
					console.log(source_str)
					source_str = source_str.substring(source_str.indexOf('http'))
					console.log(source_str)
					isValid = this.isValidUrl(source_str)
					console.log(isValid);
					if (isValid) {
						this.setVideoUrl(source_str)
						return source_str;
					}
				}catch(e){
					//TODO handle the exception
				}
				
				return this.getVideoUrl3(html);
				
			},
